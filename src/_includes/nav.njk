{% set currentUrl %}{{ page.url }}{% endset %}

<nav>
  <ul role="list">
    <li id=siteName>
      <a {% if currentUrl === '/' %}aria-current="page"{% endif %} href="/">bordoslair</a>
    </li>

    {% for page in collections.pages %}
    <li>
      <a 
        {% if currentUrl === page.url %}aria-current="page"{% endif %} 
        href="{{ page.url }}">
          {{ page.data.title }}
      </a>
    </li>
    {%- endfor %}
  </ul>
</nav>